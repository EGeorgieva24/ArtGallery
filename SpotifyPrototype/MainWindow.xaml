<Window x:Class="SpotifyPrototype.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="350">
    <Grid>

        <TextBlock Text="Music for everyone" Margin="90,59,0,349" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Grid.Row="0"/>

        <StackPanel Margin="42,106,40,62">
            <TextBox x:Name="txtUsername" Text="Username or Email" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Foreground="Gray" TextChanged="txtUsername_TextChanged"/>
            <TextBox x:Name="txtPassword" Text="Password" Foreground="Gray" />
            <Label Content=""/>
            <Button Content="Login" Click="LoginButton_Click" Width="200"/>
        </StackPanel>

        <Button Content="Sign Up" Click="SignUpButton_Click" HorizontalAlignment="Left" Margin="136,316,0,95" Width="70" FontSize="10"/>
        <TextBlock x:Name="lblMessage" Text="" Foreground="Red" Margin="0,290,20,0" Height="13" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Label Content="Don't have an account? Let's sign you up!" Margin="73,285,81,123" FontSize="10"/>
    </Grid>
</Window>